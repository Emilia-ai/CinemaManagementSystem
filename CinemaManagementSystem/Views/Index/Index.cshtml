                                <li class="zhuR3_23">
                                    <a href="/Index/MovieDetail?id=@item.movieid">
                                        <span class="zhuR3_2_2">
                                            <i>@a</i>
                                            <span class="zhuR3_2_2_1">@item.moviename</span>
                                        </span>
                                        <span class="zhuR3_2_3">
                                            @item.WantSee
