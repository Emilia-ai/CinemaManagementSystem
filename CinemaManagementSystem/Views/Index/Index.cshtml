                            }
                            @foreach (var item in ViewBag.third)
                            {
                                <li class="zhuR3_22">
                                    <a href="/Index/MovieDetail?id=@item.movieid">
                                        <div class="zhuR3_22_1">
                                            <img src=@item.pic alt="" style="width:170px;height:118px;">
